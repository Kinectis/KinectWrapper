<Page x:Class="Kinect_Wrapper.app.PageKinectWrapperControl"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
      xmlns:c="clr-namespace:CalcBinding;assembly=CalcBinding"
      
      mc:Ignorable="d" 
      d:DesignHeight="210" d:DesignWidth="170"
	Title="KinectWrapperControlWidget">


    <Grid HorizontalAlignment="Left" Height="144" Margin="6,10,-17,0" VerticalAlignment="Top" Width="175">
        <ComboBox ItemsSource="{Binding kinectWrap.Streams}" 
                    Name="ComboboxStreams" Height="20px" Margin="0,-3,0,127" HorizontalAlignment="Left" Width="158" 
                    DisplayMemberPath="Name"
                    SelectionChanged="ComboboxStreams_SelectionChanged">
        </ComboBox>
        <Button Content="STOP"  Margin="0,28,139,93" Click="stop" />
        <Button Content="PLAY"  Click="play" Margin="0,28,107,93" HorizontalAlignment="Right" Width="30" RenderTransformOrigin="0.189,0.507"/>
        <Button Content="PAUSE" Name="ButtonPause" Margin="70,28,63,93" Click="pause" />
        <Button Content="RECORD" Name="ButtonRecordAndSave"  Margin="0,56,123,65" Click="Button_Click" />
        <Button Content="+" Margin="54,56,93,65" />
        <Button Content="-" Margin="84,56,63,65" RenderTransformOrigin="1,0.565" />
        <Button Content=" NEXT &#xD;&#xA;FRAME" Margin="120,28,17,65" HorizontalContentAlignment="Center" FontSize="9" Click="Button_Click_1" />
        <CheckBox Content="play device audio" HorizontalAlignment="Left"  VerticalAlignment="Top" Margin="0,84,0,0"/>
        <CheckBox Content="record device audio" HorizontalAlignment="Left"  VerticalAlignment="Top" Margin="0,104,0,0"/>

    </Grid>



</Page>
